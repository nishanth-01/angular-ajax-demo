{
  "name": "angular-ajax-demo",
  "workspaces": [
    "app",
    "server"
  ],
  "scripts": {
    "precopy": "mkdir -p ./static && rm -rf ./static/*",
    "copy": "cp -r ./app/dist/interview-demo/browser/* ./static",

    "build": "npm run build --workspace=app",

    "start": "npm run build && npm run copy && npm run start --workspace=server -- \"$PWD\"/static"
  }
}
